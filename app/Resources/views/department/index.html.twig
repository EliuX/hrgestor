{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departments list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td><a href="{{ path('departamentos_show', { 'id': department.id }) }}">{{ department.id }}</a></td>
                <td>{{ department.name }}</td>
                <td>{{ department.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('departamentos_show', { 'id': department.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
