{% extends 'base.html.twig' %}

{% block body %}
    <h1>Empleado</h1>
    <form>
        <div class="form-group">
            <label for="name">Nombre</label>  {{ employee.name }}
        </div>
        <div class="form-group">
            <label for="name">Dirección</label>  {{ employee.address }}
        </div>
        <div class="form-group">
            <label for="department">Teléfono</label>
            {{ employee.telephone }}
        </div>
        <div class="form-group">
            <label for="department">Salario</label>
            {{ employee.salary }}
            <small id="fileHelp" class="form-text text-muted">USD</small>
        </div>
        <div class="form-group">
            <label for="department">Departamento</label>
            {{ employee.department }}
        </div>
        <hr>
        <a href="{{ path('empleados_edit', { 'id': employee.id }) }}" class="btn btn-primary">Editar</a>
        <a href="{{ path('empleados_index') }}" class="btn btn-default">Regresar al listado</a>
    </form>
{% endblock %}
